{block header}
    <h1>{$post->title}</h1>
{/block}

{block content}
    <div class="row">
        <div class="col-lg-8">
            <div n:if="$post->has_picture" class="post-image">
                <img src="{$basePath}/images/posts/{$post->id}.jpg?{time()}" class="center-block img-responsive" alt="{$post->title}" />
            </div>

            <p class="post-content">{$post->content|breaklines}</p>

            {control comments}
        </div>
        <aside class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    {control tags}

                    <a n:href="edit $post->id" class="btn btn-warning">Edit</a>
                    <!-- Replace window.confirm() with data-prompt -->
                    <a n:href="delete $post->id" class="btn btn-danger" data-prompt="Are you sure?">Delete</a>
                </div>
            </div>
        </aside>
    </div>
{/block}
